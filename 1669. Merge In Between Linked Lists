class Solution {
public:
    ListNode* mergeInBetween(ListNode* list1, int a, int b, ListNode* list2) {
        ListNode *tmp=list1;
        for(int i=0;i<a-1;i++)
            tmp=tmp->next;
        ListNode *tmp_b=tmp->next;
        for(int i=0;i<b-a+1;i++)
            tmp_b=tmp_b->next;
        tmp->next=list2;
        while(list2->next){
            list2=list2->next;
        }
        list2->next=tmp_b;
        return list1;
          
    }
};
